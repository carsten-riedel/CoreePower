{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dotnet test sln",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/CoreePower.Net.sln",
                "--logger:trx;LogFilePrefix=Report.xml",
                "--logger:html;LogFilePrefix=Report.html",
                "--logger:html;LogFilename=${workspaceFolder}/latest_test.html",
                "--consoleloggerparameters:Summary",
                "--verbosity:minimal",
                "--results-directory:${workspaceFolder}/TestResults"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "showReuseMessage": false
           }
        },
    ]
}