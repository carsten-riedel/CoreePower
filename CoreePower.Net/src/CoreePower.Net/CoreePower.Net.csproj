<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="PowerShellStandard.Library" Version="5.1.1" />
	</ItemGroup>

	<Target Name="PostBuild2" AfterTargets="PostBuildEvent" Condition="'$(Configuration)'=='Debug'">
		<Exec Command="copy /Y &quot;$(ProjectDir)CoreePower.Net.psd1&quot; &quot;$(ProjectDir)bin\$(Configuration)\$(TargetFramework)\&quot;" />
		<Exec Command="copy /Y &quot;$(ProjectDir)CoreePower.Net.$(Configuration).ps1&quot; &quot;$(ProjectDir)bin\$(Configuration)\$(TargetFramework)\CoreePower.Net.ps1&quot;" />
	</Target>

	<Target Name="PostBuild3" AfterTargets="PostBuildEvent" Condition="'$(Configuration)'=='Release'">
		<Exec Command="copy /Y &quot;$(ProjectDir)CoreePower.Net.psd1&quot; &quot;$(ProjectDir)bin\$(Configuration)\CoreePower.Net.psd1&quot;" />
		<Exec Command="copy /Y &quot;$(ProjectDir)CoreePower.Net.$(Configuration).ps1&quot; &quot;$(ProjectDir)bin\$(Configuration)\CoreePower.Net.ps1&quot;" />
	</Target>
	
</Project>
