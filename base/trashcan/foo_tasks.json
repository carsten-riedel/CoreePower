{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "abc dotnet build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/foo.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "test"
            ]
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/foo.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/doo.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test (abc)",
            "command": "echo",
            "type": "shell",
            "args": [
                "echo2"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build foo",
            "type": "shell",
            "windows": { "command": "${workspaceFolder}/${input:componentType}" },
            "linux": { "command": "${workspaceFolder}/Build-Linux-x64.sh" },
            "problemMatcher": ["$msCompile"]
        }
    
    ]
    ,
    "inputs": [
            {
                "type": "pickString",
                "id": "componentType",
                "description": "What type of component do you want to create?",
                "options": [
                "component",
                "directive",
                "pipe",
                "service",
                "class",
                "guard",
                "interface",
                "enum"
                ],
                "default": "component"
            }
          ,
            {
                "type": "promptString",
                "id": "componentName",
                "description": "Name your component.",
                "default": "my-new-component"
            }
    ]
}